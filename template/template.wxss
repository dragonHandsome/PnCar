/*shop*/
.shop{
  width: 100%;
  padding-bottom: 20rpx;
}
.shop-card{
  height: 200rpx;
  width: 710rpx;
  margin-left: 30rpx;
  margin-top:25rpx;
  padding-bottom: 25rpx;
  border-bottom: 2rpx solid rgb(245,245,245);
}
.shop-card-left{
  width: 170rpx;
  height: 170rpx;
}
.shop-card-right{
  margin-left: 20rpx;
  width: 498rpx;
}
.s-c-r-marks{
  margin-bottom: 10rpx;
}
.s-c-r-mark{
  border-radius: 15rpx;
  padding: 2rpx 10rpx;
  margin-right: 10rpx;
}
.seeData{
  margin-top:30rpx;
}
.seeData > view{
  margin-right: 10rpx;
}
.nature{
  border:1rpx solid rgba(56,151,227,0.8);
